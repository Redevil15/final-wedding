generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Family {
  id_familia       String  @id @default(uuid())
  nombre_familia   String
  codigo_utilizado Boolean @default(false)
  invitados        Guest[]
}

model Guest {
  id_invitado     String  @id @default(uuid())
  nombre_invitado String
  es_adulto       Boolean @default(false)
  confirmed       Boolean @default(false)
  id_familia      String
  familia         Family  @relation(fields: [id_familia], references: [id_familia])

  @@index([id_familia], map: "id_familia")
}
